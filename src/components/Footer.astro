<style>
	footer {
		background: linear-gradient(135deg, var(--gray-gradient));
		color: rgb(var(--gray));
		margin-top: 3em;
		border-top: 1px solid rgba(0, 0, 0, 0.1);
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1em;
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		gap: 1.5em;
		align-items: center;
	}

	.footer-left {
		text-align: left;
	}

	.copyright {
		font-size: 0.65em;
		margin: 0;
		color: rgb(var(--gray-dark));
		line-height: 1.4;
	}

	.footer-center {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.social-links {
		display: flex;
		gap: 1em;
		justify-content: center;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgb(var(--gray-dark));
		transition: all 0.3s ease;
		text-decoration: none;
	}

	.social-links a:hover {
		color: rgb(var(--black));
		transform: scale(1.15);
	}

	.social-links svg {
		width: 24px;
		height: 24px;
	}

	.footer-right {
		text-align: right;
	}

	.policies-links {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0.3em;
	}

	.policies-links a {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		transition: color 0.3s ease;
		font-size: 0.75em;
	}

	.policies-links a:hover {
		color: rgb(var(--black));
		text-decoration: underline;
	}

	.footer-contact {
		text-align: center;
		padding: 0.5em 1em 1em 1em;
		font-size: 0.7em;
	}

	.footer-contact p {
		margin: 0;
	}

	.footer-contact a {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.footer-contact a:hover {
		color: rgb(var(--black));
		text-decoration: underline;
	}

	/* Dark mode styles */
	:global(html.dark) footer {
		background: linear-gradient(135deg, rgba(31, 41, 55, 0.95), rgba(17, 24, 39, 0.95));
		border-top-color: rgba(255, 255, 255, 0.1);
		color: #d1d5db;
	}

	:global(html.dark) .copyright {
		color: #9ca3af;
	}

	:global(html.dark) .policies-links a,
	:global(html.dark) .footer-contact a,
	:global(html.dark) .social-links a {
		color: #b4b9c2;
	}

	:global(html.dark) .policies-links a:hover,
	:global(html.dark) .footer-contact a:hover,
	:global(html.dark) .social-links a:hover {
		color: #f3f4f6;
	}

	/* Responsive design */
	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: 1em;
			padding: 1em;
		}

		.footer-left,
		.footer-center,
		.footer-right {
			text-align: center;
		}

		.policies-links {
			flex-direction: row;
			gap: 1em;
			justify-content: center;
		}

		.copyright {
			font-size: 0.7em;
		}
	}
</style>
