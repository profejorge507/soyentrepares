---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<button class="menu-toggle" aria-label="Toggle menu" id="menuToggle">
			<span></span>
			<span></span>
			<span></span>
		</button>
		<div class="internal-links" id="navMenu">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/nosotros">Nosotros</HeaderLink>
			<HeaderLink href="/galeria">Galería</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<div class="theme-toggle-wrapper">
				<ThemeToggle />
			</div>
		</div>

	</nav>
</header>

<script>
	const menuToggle = document.getElementById('menuToggle');
	const navMenu = document.getElementById('navMenu');

	menuToggle?.addEventListener('click', () => {
		navMenu?.classList.toggle('active');
		menuToggle.classList.toggle('active');
	});

	// Cerrar menú al hacer click en un enlace
	document.querySelectorAll('.internal-links a').forEach(link => {
		link.addEventListener('click', () => {
			navMenu?.classList.remove('active');
			menuToggle?.classList.remove('active');
		});
	});
</script>

<style>
	@import url('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css');

	header {
		margin: 0;
		padding: 0 1em;
		background: var(--surface);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		width: 100%;
		z-index: 1000;
	}

	:global(html.dark) header {
		background: #1f2937;
		box-shadow: 0 2px 8px rgba(0,0,0, 0.4);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	/* Asegura que el título sea blanco brillante en modo oscuro aumentando la especificidad */
	:global(html.dark) nav h2 a {
		color: #f3f4f6;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1em;
		min-height: 60px;
	}

	.theme-toggle-wrapper {
		display: flex;
		align-items: center;
	}

	.internal-links {
		display: flex;
		gap: 0.5em;
		align-items: center;
	}

	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		white-space: nowrap;
	}

	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	:global(html.dark) nav a {
		color: #e5e7eb;
	}

	.menu-toggle {
		display: none;
		flex-direction: column;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5em;
		gap: 5px;
	}

	.menu-toggle span {
		width: 25px;
		height: 3px;
		background-color: rgb(var(--black));
		border-radius: 2px;
		transition: all 0.3s ease;
	}

	:global(html.dark) .menu-toggle span {
		background-color: #f3f4f6;
	}

	.menu-toggle.active span:nth-child(1) {
		transform: rotate(45deg) translate(8px, 8px);
	}

	.menu-toggle.active span:nth-child(2) {
		opacity: 0;
	}

	.menu-toggle.active span:nth-child(3) {
		transform: rotate(-45deg) translate(7px, -7px);
	}

	@media (max-width: 720px) {
		header {
			padding: 0 0.5em;
		}

		nav {
			flex-wrap: wrap;
			min-height: auto;
		}

		h2 {
			font-size: 0.9em;
		}

		.menu-toggle {
			display: flex;
		}

		.internal-links {
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: var(--surface);
			flex-direction: column;
			gap: 0;
			max-height: 0;
			overflow: hidden;
			transition: max-height 0.3s ease;
			box-shadow: 0 4px 8px rgba(var(--black), 5%);
		}

		:global(html.dark) .internal-links {
			background: #1f2937;
			box-shadow: 0 4px 8px rgba(0,0,0, 0.4);
		}

		.internal-links.active {
			max-height: 300px;
		}

		.internal-links a {
			width: 100%;
			padding: 1em;
			border-bottom: 1px solid rgb(var(--gray-light));
			border-bottom-color: transparent;
		}

		:global(html.dark) .internal-links a {
			border-bottom: 1px solid rgba(255,255,255,0.1);
		}

		.internal-links a.active {
			border-bottom: none;
			border-left: 4px solid var(--accent);
			padding-left: calc(1em - 4px);
		}

		nav a {
			padding: 0.8em 0.25em;
		}
	}

	@media (max-width: 480px) {
		h2 {
			font-size: 0.8em;
		}

		nav a {
			padding: 0.6em 0.2em;
		}

		.menu-toggle span {
			width: 20px;
		}
	}
</style>
