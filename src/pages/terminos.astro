<style>
	main {
		width: 100%;
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}

	.legal-container {
		background: var(--surface);
		padding: 2rem;
		border-radius: 8px;
		line-height: 1.8;
	}

	h1 {
		color: var(--black);
		margin-bottom: 0.5rem;
		font-size: 2.5em;
	}

	.last-updated {
		color: rgb(var(--gray-dark));
		font-style: italic;
		margin-bottom: 2rem;
	}

	h2 {
		color: var(--black);
		margin-top: 2rem;
		margin-bottom: 1rem;
		border-bottom: 2px solid var(--accent);
		padding-bottom: 0.5rem;
	}

	section {
		margin-bottom: 1.5rem;
	}

	p {
		color: rgb(var(--gray-dark));
		margin-bottom: 1rem;
	}

	ul {
		margin-left: 1.5rem;
		margin-bottom: 1rem;
	}

	li {
		color: rgb(var(--gray-dark));
		margin-bottom: 0.5rem;
	}

	a {
		color: var(--accent);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	a:hover {
		text-decoration: underline;
	}

	:global(html.dark) .legal-container {
		background: rgba(31, 41, 55, 0.5);
	}

	:global(html.dark) h1,
	:global(html.dark) h2 {
		color: #f3f4f6;
	}

	:global(html.dark) p,
	:global(html.dark) li {
		color: #d1d5db;
	}

	:global(html.dark) a {
		color: #60a5fa;
	}
</style>
